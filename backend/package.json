{
  "name": "youtube-drive-backend",
  "version": "1.0.0",
  "private": true,
  "description": "Backend for YouTube upload manager using Google Drive + Prisma + MySQL.",
  "main": "dist/src/server.js",
  "scripts": {
    "prebuild": "prisma validate",
    "dev": "ts-node src/server.ts",
    "build": "tsc && node scripts/copy-frontend.js",
    "start": "node dist/src/server.js",
    "postinstall": "prisma generate",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:coverage": "vitest run --coverage",
    "lint": "eslint src tests",
    "lint:fix": "eslint src tests --fix",
    "knip": "knip",
    "check": "npm run lint && npm run knip && npm run test",
    "prisma:generate": "prisma generate",
    "prisma:migrate": "prisma migrate dev --name init",
    "prisma:migrate:deploy": "prisma migrate deploy",
    "prisma:studio": "prisma studio",
    "worker:sync-drive": "ts-node src/workers/syncDrive.ts",
    "worker:upload-jobs": "ts-node src/workers/processUploadJobs.ts",
    "worker:render-jobs": "ts-node src/workers/processRenderJobs.ts"
  },
  "dependencies": {
    "@prisma/client": "^5.20.0",
    "@types/express-session": "^1.18.2",
    "@types/passport": "^1.0.17",
    "@types/passport-google-oauth20": "^2.0.17",
    "compression": "^1.8.1",
    "dotenv": "^16.4.0",
    "express": "^4.19.0",
    "express-rate-limit": "^8.2.1",
    "express-session": "^1.18.2",
    "fs-extra": "^11.3.2",
    "googleapis": "^128.0.0",
    "helmet": "^8.1.0",
    "morgan": "^1.10.1",
    "passport": "^0.7.0",
    "passport-google-oauth20": "^2.0.0"
  },
  "devDependencies": {
    "@eslint/js": "^9.39.1",
    "@types/compression": "^1.8.1",
    "@types/express": "^4.17.21",
    "@types/morgan": "^1.9.10",
    "@types/node": "^22.0.0",
    "@types/supertest": "^6.0.3",
    "@vitest/coverage-v8": "^4.0.15",
    "eslint": "^9.39.1",
    "knip": "^5.71.0",
    "prisma": "^5.20.0",
    "supertest": "^7.1.4",
    "ts-node": "^10.9.2",
    "typescript": "^5.5.0",
    "typescript-eslint": "^8.48.1",
    "vitest": "^4.0.15"
  }
}
